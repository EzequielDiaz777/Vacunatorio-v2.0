head
  title Aplicación
section#viewAplicacion
  table
    thead
      tr
        th DNI del paciente
        th DNI del agente de salud
        th Número de serie de la vacuna aplicada
        th Fecha aplicación de la vacuna
    tbody
      each ap in aplicaciones
        - let paciente = personas.filter(paciente => paciente.DNI === ap.DNIPaciente);
        - console.log(personas[0].nombre)
        - console.log(ap.DNIPaciente)
        - let agente = agentes.filter(agen => agen.DNI===ap.DNIAgente);
        tr
          td= paciente.nombre + " " + paciente.apellido
          td= agente.DNI
          td= ap.numeroDeSerie
          td= ap.fechaDeAplicacion
          td 
            button(onclick=`redirectToURL('${ap.idAplicacion}')`) Editar
            form(method="post" action=`/aplicaciones/${ap.idAplicacion}?_method=DELETE` style="display: inline")
              button(type="submit") Eliminar

  button(onclick="crear()") Crear 
  button(type="submit") Volver
script.
  function redirectToURL(id){
    window.location.href= "/aplicaciones/" + id
  }
  function crear(){
    window.location.href= "/aplicaciones/crear"
  }